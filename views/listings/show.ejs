<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-sm-3 offset-2">
        <br>
    <h3 class=>Listing Details</h3>
    </div>

    <div class="card col-sm-6 col-8 offset-sm-3 offset-2 show-card">
         <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listingimage">
        <div class="card-body">
            <p class="card-text">
            <b><%= listing.title %> </b> <br>
                <%= listing.description %> <br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>
        </div>
    </div>
    <br>  
    </div>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1-sm-1 col-2 offset-sm-3 offset-2 edit-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=Delete">
        
        <button class="btn btn-dark offset-5 delete-btn">Delete</button>
    </form>
    </div>  